extend layout

mixin device
  div.row
    div.col-md-12
      div.col-md-12
        h2.media-heading {{device.name}}
          img.media-object(ng-src='{{device.icon.url}}')
  div.row
    div.media-body.col-md-10
      div.col-md-6
        div.panel.panel-default.schedule
          div.panel-heading
            h3.panel-title Wakeup Schedules
          div.panel-body
            div.list-group-item(ng-repeat='schedule in device.schedules')
              +schedule()
      div.col-md-4
        form.form
          div.panel.panel-default.store-playlist
            div.panel-heading
              h3.panel-title Save play queue as playlist
            div.panel-body
                div.form-group
                  input.form-control(id='playlist-name',type='text',name='playlist',placeholder='Name of playlist')
            div.panel-footer.clearfix
              div.pull-right
                button.btn.btn-success Store

mixin schedule
  span.day.ng-hide.label.label-default(ng-hide='schedule.days.mon') Mon
  span.day.ng-show.label.label-success(ng-show='schedule.days.mon') Mon
  | 
  span.day.ng-hide.label.label-default(ng-hide='schedule.days.tue') Tue
  span.day.ng-show.label.label-success(ng-show='schedule.days.tue') Tue
  | 
  span.day.ng-hide.label.label-default(ng-hide='schedule.days.wed') Wed
  span.day.ng-show.label.label-success(ng-show='schedule.days.wed') Wed
  | 
  span.day.ng-hide.label.label-default(ng-hide='schedule.days.thu') Thu
  span.day.ng-show.label.label-success(ng-show='schedule.days.thu') Thu
  | 
  span.day.ng-hide.label.label-default(ng-hide='schedule.days.fri') Fri
  span.day.ng-show.label.label-success(ng-show='schedule.days.fri') Fri
  | 
  span.day.ng-hide.label.label-default(ng-hide='schedule.days.sat') Sat
  span.day.ng-show.label.label-success(ng-show='schedule.days.sat') Sat
  | 
  span.day.ng-hide.label.label-default(ng-hide='schedule.days.sun') Sun
  span.day.ng-show.label.label-success(ng-show='schedule.days.sun') Sun
  | 
  span.time.label.label-success {{schedule.hour}}:{{schedule.minute}}
  div.pull-right
    button.btn.btn-xs.btn-danger Remove
block body
  div(ng-controller='DsCtrl')
    div.row(ng-repeat='device in devices')
      +device()
  script(src='bower_components/angular/angular.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/directives.js')